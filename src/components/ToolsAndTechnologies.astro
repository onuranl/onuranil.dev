---
import Section from "./Section.astro";
import { Image } from "astro:assets";

const skills = [
  {
    image: "/img/typescript.png",
    name: "TypeScript",
  },
  {
    image: "/img/javascript.png",
    name: "JavaScript",
  },
  {
    image: "/img/react.png",
    name: "React",
  },
  {
    image: "/img/next.png",
    name: "Next.js",
  },
  {
    image: "/img/vue.png",
    name: "Vue",
  },
  {
    image: "/img/nuxt.png",
    name: "Nuxt.js",
  },
  {
    image: "/img/expo.png",
    name: "Expo",
  },
  {
    image: "/img/electron.png",
    name: "Electron",
  },
  {
    image: "/img/git.png",
    name: "Git",
  },
  {
    image: "/img/sass.png",
    name: "Sass",
  },
  {
    image: "/img/html5.png",
    name: "HTML5",
  },
  {
    image: "/img/nodejs.png",
    name: "Node.js",
  },
  {
    image: "/img/tailwindcss.png",
    name: "Tailwindcss",
  },
  {
    image: "/img/figma.png",
    name: "Figma",
  },
  {
    image: "/img/openlayers.png",
    name: "Openlayers",
  },
  {
    image: "/img/leaflet.png",
    name: "Leaflet",
  },
];
---

<Section title="Tools & Technologies">
  <div class="skills-row">
    {
      skills.map((skill) => (
        <div class="item">
          <Image src={skill.image} alt={skill.name} width={24} height={24} />
          <span>{skill.name}</span>
        </div>
      ))
    }
  </div>
</Section>

<style>
  .skills-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 6px;
  }

  @media (max-width: 768px) {
    .skills-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .skills-row {
      grid-template-columns: repeat(3, 1fr);
    }

    .item {
      justify-content: center !important;
    }

    .item span {
      display: none;
    }
  }

  .item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    color: var(--color-secondary);
    user-select: none;
    padding: 10px;
  }

  .item:hover {
    border: 1px solid var(--color-primary);
  }

  .item img {
    margin-right: 10px;
  }
</style>
