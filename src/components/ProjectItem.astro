---
const { data } = Astro.props;
---

<div>
  <div class="project-item">
    <a href={data.link} target="_blank">
      <img src={data.image} width="275" height="275" alt="" />
    </a>
    <a href={data.link} target="_blank">
      {data.title}
    </a>
    <p>{data.description}</p>
  </div>
</div>

<style>
  .project-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .project-item img {
    border-radius: 10px;
    max-width: 100%;
  }

  .project-item h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  .project-item p {
    margin: 0;
    color: rgba(223, 223, 223, 0.8);
    font-size: 0.85rem;
  }

  .project-item a {
    margin-bottom 0;
    font-size: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
  }
</style>
